{
  "group/sys-resources": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 200,
      "children-class": "sys-resources",
      "transition-left-to-right": false,
      "click-to-reveal": true
    },
    "modules": ["custom/sys-resources", "cpu", "memory", "disk"]
  },
  "disk": {
    "format": " {free}",
    "tooltip": true,
    "interval": 120
  },
  "cpu": {
    "format": " {usage}%",
    "tooltip": true,
    "interval": 5
  },
  "memory": {
    "interval": 2,
    "format": " {used}GiB",
    "tooltip": true,
    "tooltip-format": "{used:0.1f}GiB used out of {total:0.1f}GiB ({percentage}%)"
  },
  "custom/sys-resources": {
    "format": "󰘚",
    "tooltip": true,
    "tooltip-format": "System resources (click to expand)"
  }
}
