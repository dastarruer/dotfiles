{
  "group/hypridle": {
    "orientation": "inherit",
    "drawer": {
      "transition-duration": 200,
      "children-class": "hypridle",
      "transition-left-to-right": false,
      "click-to-reveal": true
    },
    "modules": [
      "custom/hypridle",
      "custom/hypridle-30min",
      "custom/hypridle-5min",
      "custom/hypridle-no-suspend"
    ]
  },
  "custom/hypridle": {
    "format": "󰒲",
    "tooltip": true,
    "tooltip-format": "Configure hypridle (click to expand)"
  },
  "custom/hypridle-5min": {
    "format": "{text}",
    "return-type": "json",
    "tooltip": true,
    "tooltip-format": "Suspend after 5 minutes idling",
    "on-click": "~/.config/waybar/scripts/set-hypridle-vars.sh 5",
    "interval": 1,
    "_comment": "chatgpt gave me this great way to create togglable buttons with waybar",
    "exec": "test \"$(cat $XDG_RUNTIME_DIR/hypridle-timeout 2>/dev/null)\" = 5 && echo '{\"text\":\"󰤄\",\"class\":\"active\"}' || echo '{\"text\":\"󰤄\"}'"
  },
  "custom/hypridle-30min": {
    "format": "{text}",
    "return-type": "json",
    "tooltip": true,
    "tooltip-format": "Suspend after 30 minutes idling",
    "on-click": "~/.config/waybar/scripts/set-hypridle-vars.sh 30",
    "interval": 1,
    "_comment": "chatgpt gave me this great way to create togglable buttons with waybar",
    "exec": "test \"$(cat $XDG_RUNTIME_DIR/hypridle-timeout 2>/dev/null)\" = 30 && echo '{\"text\":\"󰤄󰤄󰤄\",\"class\":\"active\"}' || echo '{\"text\":\"󰤄󰤄󰤄\"}'"
  },
  "custom/hypridle-no-suspend": {
    "format": "{text}",
    "return-type": "json",
    "tooltip": true,
    "tooltip-format": "Disable suspend after idling",
    "on-click": "~/.config/waybar/scripts/set-hypridle-vars.sh 0",
    "interval": 1,
    "_comment": "chatgpt gave me this great way to create togglable buttons with waybar",
    "exec": "test \"$(cat $XDG_RUNTIME_DIR/hypridle-timeout 2>/dev/null)\" = 0 && echo '{\"text\":\"\",\"class\":\"active\"}' || echo '{\"text\":\"\"}'"
  }
}
