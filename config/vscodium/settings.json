{
  "[css]": {
    "editor": {
      "defaultFormatter": "esbenp.prettier-vscode"
    }
  },
  "[go]": {
    "editor": {
      "defaultFormatter": "golang.go"
    }
  },
  "[html]": {
    "editor": {
      "defaultFormatter": "esbenp.prettier-vscode"
    }
  },
  "[ignore]": {
    "editor": {
      "defaultFormatter": "foxundermoon.shell-format"
    }
  },
  "[javascript]": {
    "editor": {
      "defaultFormatter": "esbenp.prettier-vscode"
    }
  },
  "[json]": {
    "editor": {
      "defaultFormatter": "esbenp.prettier-vscode"
    }
  },
  "[python]": {
    "editor": {
      "codeActionsOnSave": {
        "source": {
          "organizeImports": {
            "ruff": "explicit"
          }
        }
      },
      "defaultFormatter": "charliermarsh.ruff",
      "formatOnSave": true
    },
    "python": {
      "analysis": {
        "autoImportCompletions": true,
        "typeCheckingMode": "strict"
      }
    },
    "ruff": {
      "format": {
        "enable": true
      },
      "lint": {
        "enable": true
      }
    }
  },
  "[rust]": {
    "editor": {
      "defaultFormatter": "rust-lang.rust-analyzer"
    }
  },
  "breadcrumbs.enable": false,
  "editor.autoClosingBrackets": "always",
  "editor.autoClosingQuotes": "always",
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.detectIndentation": false,
  "editor.fontFamily": "'JetBrainsMono Nerd Font', 'Fira code', monospace",
  "editor.fontSize": 15,
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.formatOnType": true,
  "editor.guides.indentation": false,
  "editor.hideCursorInOverviewRuler": true,
  "editor.lightbulb.enabled": "off",
  "editor.minimap.enabled": false,
  "editor.overviewRulerBorder": false,
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "auto",
  "editor.stickyScroll.enabled": false,
  "editor.tabCompletion": "on",
  "editor.tabSize": 4,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": "comment",
        "settings": {
          "fontStyle": "italic"
        }
      }
    ]
  },
  "editor.wordWrap": "bounded",
  "errorLens.toggle": true,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmPasteNative": false,
  "explorer.decorations.badges": false,
  "extensions.ignoreRecommendations": true,
  "files.autoSave": "afterDelay",
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "formatting": {
    "command": ["alejandra"]
  },
  "git.openRepositoryInParentFolders": "always",
  "nix.enableLanguageServer": true,
  "nix.serverPath": "nixd",
  "nixpkgs": {
    "expr": "import <nixpkgs { }"
  },
  "options": {
    "[nix]": {
      "editor": {
        "defaultFormatter": "kamadorueda.alejandra"
      }
    },
    "nixos": {
      "expr": "(builtin.getFlake \"github:dastarruer/dotfiles\").nixosConfigurations.dastarruer.options"
    }
  },
  "rust-analyzer.assist.preferSelf": false,
  "rust-analyzer.cargo.allFeatures": true,
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.server.path": "rust-analyzer",
  "terminal.integrated.enableMultiLinePasteWarning": "never",
  "update.mode": "none",
  "window.menuBarVisibility": "hidden",
  "workbench.activityBar.location": "top",
  "workbench.colorCustomizations": {
    "editorGroup.border": "#0000",
    "editorOverviewRuler.addedForeground": "#0000",
    "editorOverviewRuler.border": "#0000",
    "editorOverviewRuler.bracketMatchForeground": "#0000",
    "editorOverviewRuler.deletedForeground": "#0000",
    "editorOverviewRuler.findMatchForeground": "#0000",
    "editorOverviewRuler.infoForeground": "#0000",
    "editorOverviewRuler.modifiedForeground": "#0000",
    "editorOverviewRuler.rangeHighlightForeground": "#0000",
    "editorOverviewRuler.selectionHighlightForeground": "#0000",
    "editorOverviewRuler.wordHighlightForeground": "#0000",
    "editorOverviewRuler.wordHighlightStrongForeground": "#0000",
    "sideBar.border": "#0000"
  },
  "workbench.colorTheme": "base16-default-dark",
  "workbench.editor.showTabs": "single",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.sideBar.location": "right",
  "workbench.startupEditor": "none",
  "workbench.tips.enabled": false,
  "workbench.tree.indent": 16,
  "workbench.tree.renderIndentGuides": "onHover",
  "python.analysis.typeCheckingMode": "strict"
}
